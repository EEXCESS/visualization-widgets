<?php
require_once("ScreenshotVis.php");

$ssVis = new ScreenshotVis();
$errors = [];
$imageLists = [];
try
{
    $ssVis->init();
    $imageLists = $ssVis->getImageLists();
} catch (EvalException $ex)
{
    $errors = $ssVis->getErrors();
}
?>

<html>

    <head>
        <link rel="stylesheet" href="eval.css">
